<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Shortlist Manager</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/js/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(TextConstants.ApplicationName, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li><a href="@Url.Content("~/Elmah")" target="_blank">Elmah</a></li>

                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Sync", "Index", "Sync")</li>
                        <li>@Html.ActionLink("SPA", "Index", "Spa")</li>
                        <li>@Html.ActionLink("Log Out", "LogOut", "Auth", null, new { style = "float:right;" })</li>
                    }
                    else {
                        <li>@Html.ActionLink("Log In", "LogIn", "Auth", null, new { style = "float:right;" })</li>
                    }

                </ul>
            </div>
        </div>
    </div>
<div class="container body-content">
    @Html.Partial("_HandledError")

    @RenderBody()
</div>
    @Scripts.Render("~/js/core")
    @RenderSection("scripts", required: false)
</body>
</html>

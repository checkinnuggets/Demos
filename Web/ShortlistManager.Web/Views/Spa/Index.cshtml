@{
    ViewBag.Title = "Shortlist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{
    <script type="text/javascript">
        var url_Shortlist_ListPlayers = '@Url.Action("ListPlayers", "Spa")';
        var url_Shortlist_GetPlayer = '@Url.Action("GetPlayer", "Spa")';
        var url_Shortlist_SavePlayer = '@Url.Action("SavePlayer", "Spa")';
        var url_Shortlist_DeletePlayer = '@Url.Action("DeletePlayer", "Spa")';
    </script>

    @Scripts.Render("~/js/ng")
    @Scripts.Render("~/js/ng-ShortlistApp")
}

<div ng-app="shortlistApp" class="ng-cloak">

    <div ng-repeat="msg in messages" class="alert {{msg.style}} alert-dismissible alert-container" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>{{msg.prefix}}</strong>
        <span class="alert alert-content">{{msg.content}}</span>
    </div>

    <div>
        <div ng-view></div>
    </div>
</div>
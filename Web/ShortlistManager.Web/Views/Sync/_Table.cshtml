@model IEnumerable<ShortlistManager.Services.Models.PlayerDto>


<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.FirstName)</th>
        <th>@Html.DisplayNameFor(model => model.Surname)</th>
        <th>@Html.DisplayNameFor(model => model.ClubName)</th>
        <th>@Html.DisplayNameFor(model => model.DateOfBirth)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
            <td>@Html.DisplayFor(modelItem => item.Surname)</td>
            <td>@Html.DisplayFor(modelItem => item.ClubName)</td>
            <td>@Html.DisplayFor(modelItem => item.DateOfBirth)</td>
            <td>
                <a href="@Url.Action("Edit", new {id = item.Id})" class="btn btn-default">Edit</a>
                <a href="@Url.Action("ConfirmDelete", new { id = item.Id })" class="btn btn-default">Delete</a>
            </td>
        </tr>
    }

</table>